<Window x:Class="JMail.MessageProps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageProps" Height="500" Width="500">
    <DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding FullMessage.Text}" FontFamily="Consolas" />
        </ScrollViewer>
    </DockPanel>
</Window>
